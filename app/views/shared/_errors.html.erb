<% if obj.errors.any? %>
<div class="row">
	<div class="col-xs-6 col-xs-offset-2">

		<div class="card bg-light text-danger">
			<div class="card-heading">
				<h6 class="card-title">
					<%= pluralize(obj.errors.count, "error") %>
					
				</h6>
				<div class="card-body">
					<ul>
						<% obj.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>